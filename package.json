{
  "name": "@differentialhq/create-app",
  "version": "0.0.4",
  "description": "A scaffolding for differential.dev apps",
  "bin": "setup.sh",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "service": "tsx src/services/$npm_config_name.ts",
    "command": "tsx src/commands/$npm_config_name.ts",
    "patch": "npm version patch && git push --follow-tags && git add . && git commit -m \"release: $(cat package.json | jq -r '.version')\" && git push && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/differentialhq/differential.git"
  },
  "author": "differential.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/differentialhq/differential/issues"
  },
  "homepage": "https://github.com/differentialhq/differential#readme",
  "dependencies": {
    "@differentialhq/core": "latest",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4"
  }
}
